<Window x:Class="ProjetaHDR.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ProjetaHDR.UI.Views"
        xmlns:viewModel="clr-namespace:ProjetaHDR.UI.ViewModels"
        d:DataContext="{d:DesignInstance viewModel:LoginViewModel}"
        mc:Ignorable="d" 
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Height="350"
        Width="450"
        Title="ProjetaHDR"
        WindowStartupLocation="CenterScreen">

    <Border Background="#E7E7E7"
            Padding="10">

        <StackPanel>

            <Image Source="{Binding ImagesPath}"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Width="150"
                   />

            <Label Content="Usuário" 
                   Margin="50 25 50 0 "
                   FontWeight="Bold"
                   FontFamily="Arial"
                   Padding="0 5"
                   />

            <Border Background="White"
                    Height="25"
                    Margin="50 0"
                    CornerRadius="5"
                    Padding="5">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Setters>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="DarkGray" 
                                                      Direction="320" 
                                                      ShadowDepth="0.5" 
                                                      BlurRadius="2" 
                                                      Opacity="0.5"/>
                                </Setter.Value>

                            </Setter>
                        </Style.Setters>
                    </Style>

                </Border.Style>

                <TextBox Text="{Binding Username}"
                         VerticalAlignment="Center"
                         BorderThickness="0"/>
            </Border>

            <Label Content="Senha" 
                   Margin="50 10 50 0 "
                   FontWeight="Bold"
                   FontFamily="Arial"
                   Padding="0 5"
                   />

            <Border Background="White"
                    Height="25"
                    Margin="50 0"
                    CornerRadius="5"
                    Padding="5">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Setters>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="DarkGray" 
                                                      Direction="320" 
                                                      ShadowDepth="0.5" 
                                                      BlurRadius="2" 
                                                      Opacity="0.5"/>
                                </Setter.Value>

                            </Setter>
                        </Style.Setters>
                    </Style>

                </Border.Style>

                <PasswordBox x:Name="PasswordInput" 
                             BorderThickness="0"/>
            </Border>

            <Button Content="Login"
                    IsEnabled="{Binding IsLoggedOff}"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=PasswordInput}"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Width="75"
                    Margin="0 25"/>

            <TextBlock Text="{Binding Message}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>

        </StackPanel>

    </Border>
</Window>